{
  "name": "clee",
  "version": "0.1.0",
  "description": "Create CLI applications with glee ðŸŽ‰",
  "main": "./build/index.js",
  "author": "Connor White",
  "license": "MIT",
  "private": false,
  "keywords": [
    "cli",
    "terminal",
    "command",
    "line",
    "parser",
    "commander",
    "terminal"
  ],
  "type": "module",
  "exports": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.json --incremental",
    "dev": "yarn node-esm test.ts",
    "lint": "eslint source --ext .ts",
    "node-esm": "node --no-warnings --loader ts-node/esm",
    "test": "yarn test:debug --silent && tsd",
    "test:debug": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "typecheck": "tsc --noEmit && tsc test/**/*.ts --noEmit --esModuleInterop",
    "watch": "yarn build --watch"
  },
  "dependencies": {
    "figlet": "^1.5.2",
    "get-module-pkg": "^1.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@types/figlet": "^1.5.5",
    "@types/node": "^18.11.9",
    "chalk": "^5.2.0",
    "eslint": "^8.28.0",
    "eslint-config-bob": "^2.0.1",
    "jest": "^29.3.1",
    "ts-node": "^10.9.1",
    "tsd": "^0.25.0",
    "type-fest": "^3.3.0",
    "types-json": "^1.2.2",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-bob"
  },
  "jest": {
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "text"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^#(.*)": "<rootDir>/node_modules/$1"
    },
    "testRegex": "test/(.*).test.ts$",
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    }
  }
}
