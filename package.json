{
  "name": "clee",
  "version": "0.1.0",
  "description": "Create CLI applications with glee ðŸŽ‰",
  "main": "./build/index.js",
  "author": "Connor White",
  "license": "MIT",
  "private": false,
  "type": "module",
  "exports": "./build/index.js",
  "files": [
    "build/**/*.js",
    "build/**/*.d.ts"
  ],
  "scripts": {
    "build": "turbo build+",
    "build+": "tsc --project ./tsconfig.json --incremental",
    "dev": "yarn node-esm test.ts",
    "lint": "turbo lint+",
    "lint+": "eslint source --ext .ts",
    "node-esm": "node --no-warnings --loader ts-node/esm",
    "test": "yarn test:debug --silent",
    "test:debug": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "typecheck": "tsc source/**/*.ts tests/**/*.ts --noEmit --esModuleInterop",
    "watch": "yarn build+ --watch"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "figlet": "^1.5.2",
    "get-module-pkg": "^1.0.1",
    "types-json": "^1.2.2"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^9.4.1",
    "@swc/core": "^1.3.21",
    "@swc/jest": "^0.2.23",
    "@types/figlet": "^1.5.5",
    "@types/node": "^18.11.9",
    "chalk": "^5.2.0",
    "eslint": "^8.28.0",
    "eslint-config-bob": "^2.0.1",
    "jest": "^29.3.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.6.3",
    "type-fest": "^3.3.0",
    "typescript": "^4.9.3"
  },
  "eslintConfig": {
    "extends": "eslint-config-bob"
  },
  "jest": {
    "collectCoverage": true,
    "coverageProvider": "v8",
    "coverageReporters": [
      "text"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^#(.*)": "<rootDir>/node_modules/$1"
    },
    "testRegex": "tests/(.*).test.ts$",
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    }
  }
}
